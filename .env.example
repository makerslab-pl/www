# Konfiguracja aplikacji MakersLab
# Skopiuj ten plik do .env i dostosuj wartości

# Ustawienia strony
SITE_NAME=MakersLab
SITE_TAGLINE=Warsztaty robotyki i elektroniki dla dzieci
SITE_DESCRIPTION=Warsztaty robotyki i elektroniki dla dzieci w Trójmieście i online. Arduino, programowanie, prototypy - nauka przez projekty.
SITE_KEYWORDS=robotyka, elektronika, dzieci, warsztaty, arduino, programowanie, trójmiasto
SITE_URL=http://localhost:8080

# Hasło administratora panelu CMS
ADMIN_PASSWORD=makerslab2024

# Dane kontaktowe
CONTACT_EMAIL=kontakt@makerslab.pl
CONTACT_PHONE=+48 123 456 789
CONTACT_LOCATION=Trójmiasto / Online

# Social media
SOCIAL_FACEBOOK=https://facebook.com/makerslab
SOCIAL_INSTAGRAM=https://instagram.com/makerslab
SOCIAL_YOUTUBE=https://youtube.com/@makerslab

# Analityka
GA_ID=

# Ustawienia sesji
SESSION_LIFETIME=3600

# Powiadomienia email
EMAIL_NOTIFICATIONS=false
EMAIL_SUBJECT=Nowe zgłoszenie MakersLab

# Ustawienia techniczne
TIMEZONE=Europe/Warsaw
DEBUG_MODE=false
DB_PATH=/var/www/html/data/makerslab.db

# Limity PHP
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# Ustawienia aplikacji
APP_ENV=local
LOG_LEVEL=info
