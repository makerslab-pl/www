{
    "name": "makerslab/website",
    "description": "MakersLab - Warsztaty robotyki i elektroniki dla dzieci",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "MakersLab",
            "email": "kontakt@makerslab.pl"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "MakersLab\\": "src/"
        },
        "files": [
            "config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MakersLab\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage --coverage-text",
        "test:unit": "phpunit --testsuite=Unit --colors=always",
        "test:integration": "phpunit --testsuite=Integration --colors=always",
        "lint": "phpcs --standard=PSR12 includes/ tests/",
        "lint:fix": "phpcbf --standard=PSR12 includes/ tests/",
        "analyse": "phpstan analyse includes/ tests/ --level=5",
        "check": [
            "@lint",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
