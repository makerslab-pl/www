# MakersLab Environment Variables
# Copy this file to .env and adjust the values

# Site Configuration
SITE_NAME=MakersLab
SITE_TAGLINE="Warsztaty robotyki i elektroniki dla dzieci"
SITE_URL=https://makerslab.pl
ADMIN_PASSWORD=makerslab2024

# Contact Information
CONTACT_EMAIL=kontakt@makerslab.pl
CONTACT_PHONE="+48 123 456 789"
CONTACT_LOCATION="Trójmiasto / Online"

# Social Media
SOCIAL_FACEBOOK=https://facebook.com/makerslab
SOCIAL_INSTAGRAM=https://instagram.com/makerslab
SOCIAL_YOUTUBE=https://youtube.com/@makerslab

# Technical Settings
TIMEZONE=Europe/Warsaw
DEBUG_MODE=false
DB_PATH=/var/www/html/data/makerslab.db

# Session Settings
SESSION_LIFETIME=3600
SESSION_COOKIE_HTTPONLY=1
SESSION_USE_STRICT_MODE=1

# Email Settings
EMAIL_NOTIFICATIONS=false
EMAIL_SUBJECT="Nowe zgłoszenie MakersLab"

# Analytics
GA_ID=

# Application Settings
APP_ENV=production
LOG_LEVEL=info

# Docker/Port Configuration
PORT=8080
ADMINER_PORT=8081

# PHP Configuration
PHP_DISPLAY_ERRORS=0
PHP_ERROR_REPORTING=E_ALL
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300
