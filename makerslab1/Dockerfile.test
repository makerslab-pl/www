# MakersLab - Test Dockerfile
# Środowisko do uruchamiania testów PHPUnit

FROM php:8.2-cli

# Metadata
LABEL maintainer="MakersLab"
LABEL description="MakersLab Test Environment"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libsqlite3-dev \
    libzip-dev \
    zip \
    unzip \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install PHP extensions
RUN docker-php-ext-install pdo pdo_sqlite zip

# Install Xdebug for code coverage
RUN pecl install xdebug && docker-php-ext-enable xdebug

# Configure Xdebug
RUN echo "xdebug.mode=coverage" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Set working directory
WORKDIR /var/www/html

# Copy composer files first (for caching)
COPY composer.json composer.lock* ./

# Install dependencies
RUN composer install --no-interaction --no-scripts --prefer-dist || true

# Copy application files
COPY . .

# Create test data directory
RUN mkdir -p /var/www/html/data && chmod 777 /var/www/html/data

# Default command - run tests
CMD ["./vendor/bin/phpunit", "--colors=always"]
