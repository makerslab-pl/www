# Isolabox Environment Variables Template
# Copy this file to .env and adjust the values

# Site Configuration
SITE_NAME=Isolabox
SITE_URL=https://isolabox.com
SITE_TAGLINE=Isolated Environments for AI Agents
SITE_VERSION=1.1.2

# URLs
GITHUB_URL=https://github.com/wronai/clonebox
DOCS_URL=https://docs.isolabox.com
DISCORD_URL=https://discord.gg/isolabox

# Contact Information
CONTACT_EMAIL=hello@isolabox.com
SALES_EMAIL=sales@isolabox.com
SUPPORT_EMAIL=support@isolabox.com

# Social Media
TWITTER_URL=https://twitter.com/isolabox
LINKEDIN_URL=https://linkedin.com/company/isolabox

# Analytics
GA_ID=
PLAUSIBLE_DOMAIN=isolabox.com

# Application Settings
APP_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info

# Host Configuration
PORT=8080
WEB_HOST=0.0.0.0
WEB_PORT=80
DB_HOST=localhost
DB_PORT=5432
REDIS_HOST=localhost
REDIS_PORT=6379
API_HOST=localhost
API_PORT=3000

# Docker Service Names
WEB_SERVICE_NAME=isolabox-web
DB_SERVICE_NAME=isolabox-db
REDIS_SERVICE_NAME=isolabox-redis
API_SERVICE_NAME=isolabox-api
